---
import { t } from 'i18next';
import Hr from './Hr.astro';
import Socials from './Socials.astro';

export interface Props {
  noMarginTop?: boolean;
}

const { noMarginTop = false } = Astro.props;
---

<footer class={`w-full ${noMarginTop ? '' : 'mt-auto'}`}>
  <Hr noPadding />
  <div class="flex flex-col items-center justify-between py-6 sm:flex-row-reverse sm:py-4">
    <Socials centered />
    <div class="my-2 flex flex-col items-center whitespace-nowrap sm:flex-row">
      <span>Copyright &#169; {new Date().getFullYear()}</span>
      <span class="hidden sm:inline">&nbsp;|&nbsp;</span>
      <span>{t('footer.rights')}</span>
    </div>
  </div>
</footer>

<style>
  .link {
    @apply my-1 p-2 hover:rotate-6;
  }
  .link svg {
    @apply scale-125;
  }
</style>
