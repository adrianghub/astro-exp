---
export interface Props {
  href: string;
  type?: string;
  className?: string;
  ariaLabel?: string;
  title?: string;
  disabled?: boolean;
}

const { href, type, className, ariaLabel, title, disabled = false } = Astro.props;
---

<a
  type={type}
  href={disabled ? '#' : href}
  tabindex={disabled ? '-1' : '0'}
  class={`group ${className}`}
  aria-label={ariaLabel}
  title={title}
  aria-disabled={disabled}><slot /></a
>

<style>
  a {
    @apply hover:text-skin-accent;
  }

  a[type='button'] {
    @apply hover:text-skin-accent;
  }
</style>
